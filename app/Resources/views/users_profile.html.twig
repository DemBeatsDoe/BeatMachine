                    <img class="songIcon" src="{{ asset('resources/images/album-art/15.jpg') }}">
                    <img class="songIcon" src="{{ asset('resources/images/album-art/7.jpg') }}">
                    <img class="songIcon" src="{{ asset('resources/images/album-art/6.jpg') }}">

                    <div class="playlist-info-box">
                        <div class="playlist-heartButton"></div>
                        <div class="playlist-likeCount">
