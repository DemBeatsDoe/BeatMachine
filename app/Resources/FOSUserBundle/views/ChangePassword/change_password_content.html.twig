{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
<h1 class="text-center">Change Password</h1>
<br>
<div class="col-xs-5 col-md-3"></div>

<div class="col-xs-8 col-md-6">
    <div class="form-group">
        {{ form_widget(form.current_password, { 'attr': {'class': 'form-control placeholder-no-fix', 'placeholder':'Current Password'} }) }}
        {% for errorItem in form.current_password.vars.errors %}
            <span class="help-inline">{{ errorItem.message }}</span>
        {% endfor %}
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder':'New Password'} }) }}
        {% for errorItem in form.plainPassword.first.vars.errors %}
            <span class="help-inline">{{ errorItem.message }}</span>
        {% endfor %}
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder':'Confirm New Password'} }) }}
        {% for errorItem in form.plainPassword.second.vars.errors %}
            <span class="help-inline">{{ errorItem.message }}</span>
        {% endfor %}
    </div>
    <div class="form-actions">
        <input type="submit" class="btn btn-success btn-block" value="{{ 'Change Password'|trans }}" />
    </div>
    <div class="col-xs-4 col-md-2"></div>
    {{ form_rest(form) }}
    {{ form_end(form) }}



