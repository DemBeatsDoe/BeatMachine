{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
<div class="col-xs-5 col-md-3"></div>

<div class="col-xs-8 col-md-6">
    <h1 class="text-center">Register</h1>
    Has an account? <a href="{{ path('fos_user_security_login') }}">Back to Log in</a>
    <br>
    <br>
    <div class="form-group">
        {{ form_widget(form.username, { 'attr': {'class': 'for_user_registration_register form-control placeholder-no-fix', 'placeholder':'Username'} }) }}
        {% for errorItem in form.username.vars.errors %}
            <span class="help-inline">{{ errorItem.message }}</span>
        {% endfor %}
    </div>
    <div class="form-group">
        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder':'E-mail'} }) }}
        {% for errorItem in form.email.vars.errors %}
            <span class="help-inline">{{ errorItem.message }}</span>
        {% endfor %}
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder':'Password'} }) }}
        {% for errorItem in form.plainPassword.first.vars.errors %}
            <span class="help-inline">{{ errorItem.message }}</span>
        {% endfor %}
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder':'Confirm Password'} }) }}
        {% for errorItem in form.plainPassword.second.vars.errors %}
            <span class="help-inline">{{ errorItem.message }}</span>
        {% endfor %}
    </div>
    <div class="form-actions">
        <input type="submit" class="btn btn-success btn-block" value="{{ 'Register'|trans }}" />
    </div>
    <div class="col-xs-4 col-md-2"></div>
    {{ form_rest(form) }}
{{ form_end(form) }}